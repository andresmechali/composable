{
  "name": "composable",
  "version": "0.1.0",
  "private": true,
  "author": "@Dom-Roth",
  "license": "Public Domain",
  "type": "module",
  "exports": {
    "./types/*": [
      "./packages/types/dist/**/*.js",
      "./packages/types/dist/**/*.d.ts",
      "./packages/types/src/**/*"
    ],
    "./utils/*": [
      "./packages/utils/dist/**/*.js",
      "./packages/utils/dist/**/*.d.ts",
      "./packages/utils/src/**/*"
    ],
    "./oraclesetup/*": [
      "./packages/oraclesetup/dist/types/**/*.js",
      "./packages/oraclesetup/dist/types/**/*.d.ts",
      "./packages/oraclesetup/src/**/*"
    ]
  },
  "scripts": {
    "build": "yarn build:gen && yarn build:compile",
    "build:gen": "cd ./packages/types && yarn && yarn gen",
    "build:compile": "tsc -p . --declaration",
    "lint": "eslint 'packages/**/*.ts'",
    "prettier": "prettier ./packages --write"
  },
  "workspaces": [
    "packages/*"
  ],
  "resolutions": {
    "@polkadot/api": "^8.3.2",
    "typescript": "^4.7.3"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "^8.18.0",
    "prettier": "^2.7.1",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4",
    "@polkadot/api": "^8.3.2",
    "@polkadot/keyring": "^9.3.1",
    "@polkadot/ts": "^0.4.22",
    "@polkadot/typegen": "^8.3.2",
    "@polkadot/types": "^8.3.2",
    "@polkadot/types-augment": "^8.3.2",
    "@polkadot/types-codec": "^8.3.2",
    "@polkadot/types-create": "^8.3.2",
    "@polkadot/types-known": "^8.3.2",
    "@polkadot/types-support": "^8.3.2",
    "@polkadot/util": "^9.3.1",
    "@polkadot/util-crypto": "^9.3.1"
  }
}
