{
  "name": "composablejs",
  "private": true,
  "author": "@Dom-Roth",
  "license": "Public Domain",
  "exports": {
    "./packages/types/*": "./dist/types/.js"
  },
  "scripts": {
    "build": "yarn build:gen && yarn prettier && yarn build:compile",
    "build:gen": "cd ./packages/types && yarn && yarn gen",
    "build:compile": "tsc -p . --declaration",
    "lint": "eslint 'packages/**/*.ts'",
    "prettier": "prettier ./packages --write"
  },
  "workspaces": [
    "packages/*"
  ],
  "resolutions": {
    "@polkadot/api": "^8.5.1",
    "typescript": "^4.7.3"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "^8.18.0",
    "prettier": "^2.7.1",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4"
  }
}
