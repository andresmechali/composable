{
  "compilerOptions": {
    "traceResolution": false,
    "module": "commonjs",
    "strict": true,
    "target": "ES6",
    "lib": ["ES6", "DOM", "ScriptHost"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "sourceRoot": "ts",
    "noLib": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "pretty": true,
    "removeComments": false,
    "skipLibCheck": true, // Can't be disabled without compilation issues!
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "typeRoots": ["node_modules/@types"],
    "rootDirs": ["packages/types/src/", "packages/utils/src/",
      "packages/oracle-setup/src/"
    ],
    "paths": {
      "@composable/types/*": ["./packages/types/src/*"],
      "@composable/types/api/augment": ["./packages/types/src/interfaces/augment-api.ts"],
      "@composable/types/types/augment": ["./packages/types/src/interfaces/augment-types.ts"],
      "@polkadot/api/augment": ["./packages/types/src/interfaces/augment-api.ts"],
      "@polkadot/types/augment": ["./packages/types/src/augment-types.ts"],
      "@composable/utils/*": ["./packages/utils/src/*"],
      "@composable/oracle-setup/*": ["./packages/oracle-setup/src/*"]
    }
  },
  "references": [
    {
      "path": "./packages/types/tsconfig.json"
    },
    {
      "path": "./packages/utils/tsconfig.json"
    },
    {
      "path": "./packages/oracle-setup/tsconfig.json"
    }
  ],
  "include": ["packages/**/src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "dist", "**/dist/**/*", "**/node_modules/**/*", "**/dist/**/*"]
}
